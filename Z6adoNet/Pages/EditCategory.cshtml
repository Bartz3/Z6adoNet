				<span asp-validation-for="editCategory.shortName" class="text-danger"></span> 
		</div>
		<div class="form-group">
			<label asp-for="editCategory.longName" class="control-label col-sm2"></label>
			<div class="col-sm-6">
				<input asp-for="editCategory.longName" class="form-control"> </div>
				<span asp-validation-for="editCategory.longName" class="text-danger"></span>
		</div>
		<br />
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button class="btn btn-primary">Zatwierdź</button>
			</div>
		</div>
