@page
@model Zadanie6.Pages.CreateModel
@{
    ViewData["Title"] = "Nowy produkt";
}
<h2>Nowy produkt</h2>
<br />
<br />
<div class="container">
	<form class="form-horizontal" method="post">
		<div class="form-group">
			<label asp-for="newProduct.name" class="control-label col-sm2"></label>
				
			<div class="col-sm-6">
				<input asp-for="newProduct.name" class="form-control"> </div>
				<span asp-validation-for="newProduct.name" class="text-danger"></span> 
		</div>
		<div class="form-group">
			<label asp-for="newProduct.price" class="control-label col-sm2"></label>
			<div class="col-sm-6">
				<input asp-for="newProduct.price" class="form-control"> </div>
				<span asp-validation-for="newProduct.price" class="text-danger"></span>
		</div>
		<br />
		Kategoria
		<select asp-for="category.id">
			<option value="">-</option>
			@foreach(var cat in Model.categoryList)
			{
				<option value="@cat.id">@cat.shortName</option>
			}		
		</select>
		<br /><br />
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button class="btn btn-primary">Zatwierdź</button>
			</div>
		</div>
	</form>
</div>